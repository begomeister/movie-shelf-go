<% provide(:title, "Sign up") %>
<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
    
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
    
    <%= f.submit "Sign up", class: "btn btn-primary" %>
<% end %>